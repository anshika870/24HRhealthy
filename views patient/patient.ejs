
<% layout("/layouts/boilerplate.ejs")-%>
<body class="dbg">
   
    <div class="card">
        <% for(let doc of alldoctors) { %>
            <br><br>
            <div class="cardbox">
                <div class="card-header">
                    <b><%= doc.name %></b>
                </div>
                <div class="card-body carddoctor" >
                <p class="card-text"><B>Speciality: </B>  <%= doc.specialty %></p>
                <p class="card-text"><B>Symptom: </B>  <%= doc.symptom %></p>
                <p class="card-text"><b>Ratings: </b><%=doc.ratings %>&#x2B50;</p>
                <p class="card-text"><b>Mobile number: </b><%= doc.mobile_number %></p>
                <a href="" class="btn btn-success" ><img src="icon-for-chat-16.jpg" height="25px" width="25px"style="border-radius:50%">Chat</a>
                <a href="" class="btn btn-success">&#128222;Call</a>
                <a href="" class="btn btn-success"><img src="video-camera.png " height="22px" width="22px"> Vedio Call</a>
                <br><br>
                <a href="http://localhost:8080/checkauthenticationapoint/<%= doc._id %>" class="btn btn-primary">Book appointment</a>
                </div>
            </div>
       
       
        <% } %>

    </div>
<br><br>
</body> 
    



